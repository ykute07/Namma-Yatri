<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerificationOfIdentityActivity">
    <com.mmdev.loadingviewlib.LoadingView
        android:id="@+id/loadingView"
        android:layout_height="150dp"
        android:layout_width="150dp"

        app:loadStrokeColor="@android:color/holo_blue_bright"
        app:loadStrokeWidth="6dp"
        android:layout_centerInParent="true"

        />

    <ImageView
        android:id="@+id/right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/ic_baseline_check_24"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/wrong"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        app:srcCompat="@drawable/ic_baseline_clear_24" />

    <TextView
        android:id="@+id/desription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loadingView"
        android:layout_centerHorizontal="true"
        android:hint="Verifying User"

        android:text="Verifying User"
        android:textSize="20sp" />
    <Button
        android:id="@+id/CeediButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:layout_below="@+id/loadingView"
        android:text="Generate Verite id" />


</RelativeLayout>