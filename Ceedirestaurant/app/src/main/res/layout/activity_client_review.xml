<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".client.ClientReviewActivity">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/reviewRestarurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Review restaurant"
        app:icon="@drawable/home" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/reviewDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@id/reviewRestarurant"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:text="Review Driver"
        app:icon="@drawable/notification_icon" />

</RelativeLayout>